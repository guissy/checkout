{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Next.js Checkout App",
      "cwd": "${workspaceFolder}/apps/checkout-app",
      "runtimeExecutable": "turbo",
      "runtimeArgs": ["dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "sourceMaps": true
    }
  ]
}